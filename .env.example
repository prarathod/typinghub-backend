# Server Configuration
PORT=4000
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=typinghub

# Frontend URL (for CORS)
# For Vercel deployment, use your Vercel app URL
# Can be comma-separated for multiple origins: https://app.vercel.app,https://www.yourdomain.com
CLIENT_URL=https://your-app.vercel.app

# Google OAuth
# Update callback URL in Google Console to: https://your-ec2-domain.com/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-ec2-domain.com/auth/google/callback

# JWT Secret (use a strong random string)
JWT_SECRET=replace-with-strong-secret-min-32-chars

# Razorpay (use live keys from https://dashboard.razorpay.com/app/keys)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret